{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "declaration": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./build",
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2020",
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": ["build", "node_modules"],
  "filesGlob": ["src/**/*.ts"],
  "include": ["src/**/*.ts", "src/**/*.json"],
  "types": ["node"]
}
